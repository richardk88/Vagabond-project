<div>
    <h1 class='location-name text-center'><%= @city.name%></h1>
</div>
<div class="cityImage">
    <%= image_tag @city.picture, class: 'city-img-size'%>
</div>

<br />

<div class='success-alert text-center'><%= flash[:alert]%></div>


<br />

<div><%= button_to "New Post", new_city_post_path(@city), method: :get, class: "button"%></div>

<ul class='text-center'>
    <% @city.posts.order('created_at desc').take(10).each do |post| %>
    <div class='post-font card'> 
        <h4 class="card-header post-title"><%= link_to post.title, city_post_path(@city.id, post.id) %> <span class="post-timestamp">(<%= time_ago_in_words(post.created_at) %>)</span></h4> 
        <div class="card-body">
            <p class="card-text">
                <%= truncate post.synopsis, length:250 %> 
            </p>
        </div>
        <div class="btn btn-primary"><%= link_to  "See More...", city_post_path(@city.id, post.id), class: 'see-more-btn' %> </div> 
    </div>
    <%end%>

</ul>
