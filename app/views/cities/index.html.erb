
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
  </ol>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'girl.jpeg', class: 'd-block w-100', alt: 'First slide'%>
      <div class="carousel-caption d-none d-md-block">
            <h3>ATLANTA</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'map.jpeg', class: 'd-block w-100', alt: 'Second slide'%>
      <div class="carousel-caption d-none d-md-block">
            <h3>ATLANTA</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'pineapple.jpeg', class: 'd-block w-100', alt: 'Third slide'%>
      <div class="carousel-caption d-none d-md-block">
            <h3>ATLANTA</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'polaroids.jpeg', class: 'd-block w-100', alt: 'Fourth slide'%>
        <div class="carousel-caption d-none d-md-block">
            <h3>ATLANTA</h3>
        </div>
    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div> 


<ul class='center'>
    <% @cities.each do |city| %>
        <%= link_to city.name, city_path(city) %>
        <div class="carousel-item">
            <%= image_tag 'pineapple.jpeg', class: 'd-block w-100', alt: 'Third slide'%>
            <div class="carousel-caption d-none d-md-block">
                <h3>ATLANTA</h3>
            </div>
        </div>
    <%end%>
</ul>

